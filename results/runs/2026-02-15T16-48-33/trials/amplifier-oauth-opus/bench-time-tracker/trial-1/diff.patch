+import { readFileSync, writeFileSync, mkdirSync, existsSync } from "node:fs";
+import { dirname } from "node:path";
+import type {
+  TimeEntry,
+  TrackerData,
+  TimeSummary,
+  DateRangeFilter,
+} from "./types.js";
+
+const EMPTY_DATA: TrackerData = { entries: [] };
+
+export class TimeTracker {
+  private readonly filePath: string;
+  private data: TrackerData;
+
+  constructor(filePath: string) {
+    this.filePath = filePath;
+    this.data = this.load();
+  }
+
+  /**
+   * Start a new timer for the given task name.
+   * If another timer is currently running, it is stopped first.
+   */
+  start(task: string): TimeEntry {
+    if (!task || task.trim().length === 0) {
+      throw new Error("Task name must not be empty");
+    }
+
+    // Auto-stop any running timer
+    const running = this.getRunningEntry();
+    if (running) {
+      running.stop = new Date().toISOString();
+    }
+
+    const entry: TimeEntry = {
+      task,
+      start: new Date().toISOString(),
+      stop: null,
+    };
+    this.data.entries.push(entry);
+    this.save();
+    return entry;
+  }
+
+  /**
+   * Stop the currently running timer.
+   * Throws if no timer is running.
+   */
+  stop(): TimeEntry {
+    const running = this.getRunningEntry();
+    if (!running) {
+      throw new Error("No timer is currently running");
+    }
+    running.stop = new Date().toISOString();
+    this.save();
+    return running;
+  }
+
+  /**
+   * Get the currently running entry, or null if none is active.
+   */
+  status(): TimeEntry | null {
+    return this.getRunningEntry();
+  }
+
+  /**
+   * Retrieve all entries, optionally filtered by a date range.
+   * The filter matches entries whose start time falls within the range.
+   */
+  getEntries(filter?: DateRangeFilter): TimeEntry[] {
+    if (!filter) {
+      return [...this.data.entries];
+    }
+    return this.data.entries.filter((entry) => {
+      const start = new Date(entry.start);
+      if (filter.from && start < filter.from) return false;
+      if (filter.to && start > filter.to) return false;
+      return true;
+    });
+  }
+
+  /**
+   * Get a summary of total time (in milliseconds) spent per task name.
+   * Running tasks use the current time for their duration calculation.
+   */
+  summary(filter?: DateRangeFilter): TimeSummary {
+    const entries = this.getEntries(filter);
+    const result: TimeSummary = {};
+    const now = new Date();
+
+    for (const entry of entries) {
+      const start = new Date(entry.start);
+      const end = entry.stop ? new Date(entry.stop) : now;
+      const duration = end.getTime() - start.getTime();
+      result[entry.task] = (result[entry.task] ?? 0) + duration;
+    }
+
+    return result;
+  }
+
+  // ---- Private helpers ----
+
+  private getRunningEntry(): TimeEntry | null {
+    // Find the last entry that has no stop time
+    for (let i = this.data.entries.length - 1; i >= 0; i--) {
+      if (this.data.entries[i].stop === null) {
+        return this.data.entries[i];
+      }
+    }
+    return null;
+  }
+
+  private load(): TrackerData {
+    if (!existsSync(this.filePath)) {
+      return { ...EMPTY_DATA, entries: [] };
+    }
+    try {
+      const raw = readFileSync(this.filePath, "utf-8");
+      const parsed: unknown = JSON.parse(raw);
+      if (
+        typeof parsed === "object" &&
+        parsed !== null &&
+        "entries" in parsed &&
+        Array.isArray((parsed as TrackerData).entries)
+      ) {
+        return parsed as TrackerData;
+      }
+      return { ...EMPTY_DATA, entries: [] };
+    } catch {
+      return { ...EMPTY_DATA, entries: [] };
+    }
+  }
+
+  private save(): void {
+    const dir = dirname(this.filePath);
+    if (!existsSync(dir)) {
+      mkdirSync(dir, { recursive: true });
+    }
+    writeFileSync(this.filePath, JSON.stringify(this.data, null, 2), "utf-8");
+  }
+}
