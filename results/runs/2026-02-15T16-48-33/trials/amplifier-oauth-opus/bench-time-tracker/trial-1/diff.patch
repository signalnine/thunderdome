+/** A single time tracking entry. */
+export interface TimeEntry {
+  /** Name of the task being tracked. */
+  task: string;
+  /** ISO 8601 timestamp of when the timer was started. */
+  start: string;
+  /** ISO 8601 timestamp of when the timer was stopped, or null if still running. */
+  stop: string | null;
+}
+
+/** Persisted data format for the JSON file. */
+export interface TrackerData {
+  entries: TimeEntry[];
+}
+
+/** Summary of total time spent per task name, in milliseconds. */
+export type TimeSummary = Record<string, number>;
+
+/** Options for filtering entries by date range. */
+export interface DateRangeFilter {
+  /** Inclusive start of the range. */
+  from?: Date;
+  /** Inclusive end of the range. */
+  to?: Date;
+}
