+import { readFileSync, writeFileSync, mkdirSync, existsSync } from "node:fs";
+import { dirname } from "node:path";
+import type { TrackerData } from "./types.js";
+
+/**
+ * Load tracker data from a JSON file.
+ * Returns empty data if the file does not exist.
+ */
+export function loadData(filePath: string): TrackerData {
+  if (!existsSync(filePath)) {
+    return { entries: [] };
+  }
+  const raw = readFileSync(filePath, "utf-8");
+  const parsed: unknown = JSON.parse(raw);
+  if (!isTrackerData(parsed)) {
+    return { entries: [] };
+  }
+  return parsed;
+}
+
+/**
+ * Save tracker data to a JSON file.
+ * Creates parent directories if they don't exist.
+ */
+export function saveData(filePath: string, data: TrackerData): void {
+  const dir = dirname(filePath);
+  if (!existsSync(dir)) {
+    mkdirSync(dir, { recursive: true });
+  }
+  writeFileSync(filePath, JSON.stringify(data, null, 2), "utf-8");
+}
+
+/**
+ * Type guard for TrackerData.
+ */
+function isTrackerData(value: unknown): value is TrackerData {
+  if (typeof value !== "object" || value === null) return false;
+  const obj = value as Record<string, unknown>;
+  return Array.isArray(obj.entries);
+}
