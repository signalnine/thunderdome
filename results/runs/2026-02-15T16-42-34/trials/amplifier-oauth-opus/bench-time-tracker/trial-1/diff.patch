+import { loadData, saveData } from "./storage.js";
+import type {
+  TimeEntry,
+  TimeTrackerOptions,
+  DateRange,
+  TimeSummary,
+  TrackerData,
+} from "./types.js";
+
+/**
+ * A time tracker that supports starting/stopping named timers,
+ * persisting entries to a JSON file, querying by date range,
+ * and summarizing time per task.
+ */
+export class TimeTracker {
+  private readonly filePath: string;
+  private data: TrackerData;
+
+  constructor(options: TimeTrackerOptions) {
+    this.filePath = options.filePath;
+    this.data = loadData(this.filePath);
+  }
+
+  /**
+   * Start a timer for a named task.
+   * If another timer is already running, it is stopped automatically.
+   * @throws Error if the task name is empty or only whitespace.
+   */
+  start(task: string): TimeEntry {
+    if (task.trim().length === 0) {
+      throw new Error("Task name must not be empty.");
+    }
+
+    // Auto-stop any currently running timer.
+    const running = this.getRunningEntry();
+    if (running) {
+      running.stoppedAt = new Date().toISOString();
+    }
+
+    const entry: TimeEntry = {
+      task,
+      startedAt: new Date().toISOString(),
+      stoppedAt: null,
+    };
+    this.data.entries.push(entry);
+    this.persist();
+    return entry;
+  }
+
+  /**
+   * Stop the currently running timer.
+   * @throws Error if no timer is currently running.
+   */
+  stop(): TimeEntry {
+    const running = this.getRunningEntry();
+    if (!running) {
+      throw new Error("No timer is currently running.");
+    }
+    running.stoppedAt = new Date().toISOString();
+    this.persist();
+    return running;
+  }
+
+  /**
+   * Get the currently running entry, or null if nothing is running.
+   */
+  getRunningEntry(): TimeEntry | null {
+    return this.data.entries.find((e) => e.stoppedAt === null) ?? null;
+  }
+
+  /**
+   * Get all recorded time entries, optionally filtered by a date range.
+   * The range filters on the entry's start time.
+   */
+  getEntries(range?: DateRange): TimeEntry[] {
+    if (!range) {
+      return [...this.data.entries];
+    }
+
+    return this.data.entries.filter((entry) => {
+      const started = new Date(entry.startedAt);
+      if (range.from && started < range.from) return false;
+      if (range.to && started > range.to) return false;
+      return true;
+    });
+  }
+
+  /**
+   * Summarize total time per task name in milliseconds.
+   * Running (unstopped) entries use the current time for their duration.
+   */
+  getSummary(): TimeSummary {
+    const summary: TimeSummary = {};
+    const now = new Date();
+
+    for (const entry of this.data.entries) {
+      const start = new Date(entry.startedAt).getTime();
+      const end = entry.stoppedAt
+        ? new Date(entry.stoppedAt).getTime()
+        : now.getTime();
+      const duration = end - start;
+
+      summary[entry.task] = (summary[entry.task] ?? 0) + duration;
+    }
+
+    return summary;
+  }
+
+  /**
+   * Persist current data to disk.
+   */
+  private persist(): void {
+    saveData(this.filePath, this.data);
+  }
+}
