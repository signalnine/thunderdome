+import * as fs from "node:fs";
+import * as path from "node:path";
+import type { TimeEntry, TimeTrackerData, TimeSummary } from "./types.js";
+
+export class TimeTracker {
+  private filePath: string;
+  private data: TimeTrackerData;
+
+  constructor(filePath: string) {
+    this.filePath = path.resolve(filePath);
+    this.data = this.load();
+  }
+
+  private load(): TimeTrackerData {
+    try {
+      const raw = fs.readFileSync(this.filePath, "utf-8");
+      const parsed = JSON.parse(raw) as TimeTrackerData;
+      if (!parsed.entries || !Array.isArray(parsed.entries)) {
+        return { entries: [] };
+      }
+      return parsed;
+    } catch {
+      return { entries: [] };
+    }
+  }
+
+  private save(): void {
+    const dir = path.dirname(this.filePath);
+    fs.mkdirSync(dir, { recursive: true });
+    fs.writeFileSync(this.filePath, JSON.stringify(this.data, null, 2), "utf-8");
+  }
+
+  private getRunningEntry(): TimeEntry | undefined {
+    return this.data.entries.find((e) => e.stop === null);
+  }
+
+  start(task: string): TimeEntry {
+    if (!task || task.trim().length === 0) {
+      throw new Error("Task name must not be empty");
+    }
+
+    const running = this.getRunningEntry();
+    if (running) {
+      running.stop = new Date().toISOString();
+    }
+
+    const entry: TimeEntry = {
+      task,
+      start: new Date().toISOString(),
+      stop: null,
+    };
+
+    this.data.entries.push(entry);
+    this.save();
+    return entry;
+  }
+
+  stop(): TimeEntry {
+    const running = this.getRunningEntry();
+    if (!running) {
+      throw new Error("No timer is currently running");
+    }
+
+    running.stop = new Date().toISOString();
+    this.save();
+    return running;
+  }
+
+  getEntries(options?: { from?: Date; to?: Date }): TimeEntry[] {
+    if (!options) {
+      return [...this.data.entries];
+    }
+
+    return this.data.entries.filter((entry) => {
+      const startTime = new Date(entry.start).getTime();
+      if (options.from && startTime < options.from.getTime()) {
+        return false;
+      }
+      if (options.to && startTime > options.to.getTime()) {
+        return false;
+      }
+      return true;
+    });
+  }
+
+  getSummary(options?: { from?: Date; to?: Date }): TimeSummary {
+    const entries = this.getEntries(options);
+    const summary: TimeSummary = {};
+    const now = Date.now();
+
+    for (const entry of entries) {
+      const startTime = new Date(entry.start).getTime();
+      const stopTime = entry.stop ? new Date(entry.stop).getTime() : now;
+      const duration = stopTime - startTime;
+
+      if (summary[entry.task] === undefined) {
+        summary[entry.task] = 0;
+      }
+      summary[entry.task] += duration;
+    }
+
+    return summary;
+  }
+
+  isRunning(): boolean {
+    return this.getRunningEntry() !== undefined;
+  }
+
+  currentTask(): string | null {
+    const running = this.getRunningEntry();
+    return running ? running.task : null;
+  }
+}
