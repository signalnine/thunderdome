+import { marked } from 'marked';
+import { Plugin, ContentFile, BuildContext } from '../core/types.js';
+
+export function createMarkdownExtPlugin(): Plugin {
+  return {
+    name: 'markdown-ext',
+    version: '1.0.0',
+    dependencies: [],
+    hooks: {
+      transformContent(file: ContentFile, _ctx: BuildContext): ContentFile {
+        let content = file.content;
+
+        if (!content) {
+          return { ...file, content: '' };
+        }
+
+        // Extract footnote definitions before markdown processing
+        const footnoteDefRegex = /^\[\^(\d+)\]:\s*(.+)$/gm;
+        const footnotes: Map<string, string> = new Map();
+        let match: RegExpExecArray | null;
+        while ((match = footnoteDefRegex.exec(content)) !== null) {
+          footnotes.set(match[1], match[2]);
+        }
+
+        // Remove footnote definitions from content
+        content = content.replace(/^\[\^(\d+)\]:\s*(.+)$/gm, '');
+
+        // Process admonition containers before markdown
+        // Replace :::type\ncontent\n::: with placeholder divs
+        content = content.replace(/^:::(note|warning|tip)\n([\s\S]*?)^:::/gm, (_m, type: string, body: string) => {
+          return `<div class="admonition admonition-${type}">\n${body.trim()}\n</div>`;
+        });
+
+        // Replace footnote references [^N] with sup/a tags before markdown
+        content = content.replace(/\[\^(\d+)\]/g, '<sup><a href="#fn-$1">$1</a></sup>');
+
+        // Convert markdown to HTML using marked
+        const html = marked.parse(content, { async: false }) as string;
+
+        let result = html;
+
+        // Append footnote section if there are footnotes
+        if (footnotes.size > 0) {
+          const items = Array.from(footnotes.entries())
+            .map(([id, text]) => `<li id="fn-${id}">${text}</li>`)
+            .join('\n');
+          result += `\n<section class="footnotes"><ol>\n${items}\n</ol></section>`;
+        }
+
+        return { ...file, content: result };
+      },
+    },
+  };
+}
