+import { describe, it, expect, beforeEach, afterEach } from "vitest";
+import * as fs from "node:fs";
+import * as path from "node:path";
+import * as os from "node:os";
+import { TimeTracker } from "./tracker.js";
+
+function tmpFile(): string {
+  const dir = fs.mkdtempSync(path.join(os.tmpdir(), "tracker-test-"));
+  return path.join(dir, "data.json");
+}
+
+function cleanup(filePath: string): void {
+  try {
+    fs.rmSync(path.dirname(filePath), { recursive: true, force: true });
+  } catch {
+    // ignore
+  }
+}
+
+describe("TimeTracker", () => {
+  let filePath: string;
+
+  beforeEach(() => {
+    filePath = tmpFile();
+  });
+
+  afterEach(() => {
+    cleanup(filePath);
+  });
+
+  describe("start", () => {
+    it("should start a timer for a task", () => {
+      const tracker = new TimeTracker(filePath);
+      const entry = tracker.start("coding");
+      expect(entry.task).toBe("coding");
+      expect(entry.start).toBeTruthy();
+      expect(entry.stop).toBeNull();
+    });
+
+    it("should throw when task name is empty", () => {
+      const tracker = new TimeTracker(filePath);
+      expect(() => tracker.start("")).toThrow("Task name must not be empty");
+    });
+
+    it("should throw when task name is whitespace only", () => {
+      const tracker = new TimeTracker(filePath);
+      expect(() => tracker.start("   ")).toThrow("Task name must not be empty");
+    });
+
+    it("should auto-stop a running timer when starting a new one", () => {
+      const tracker = new TimeTracker(filePath);
+      tracker.start("task1");
+      tracker.start("task2");
+
+      const entries = tracker.getEntries();
+      expect(entries).toHaveLength(2);
+      expect(entries[0].task).toBe("task1");
+      expect(entries[0].stop).not.toBeNull();
+      expect(entries[1].task).toBe("task2");
+      expect(entries[1].stop).toBeNull();
+    });
+  });
+
+  describe("stop", () => {
+    it("should stop the running timer", () => {
+      const tracker = new TimeTracker(filePath);
+      tracker.start("coding");
+      const stopped = tracker.stop();
+      expect(stopped.task).toBe("coding");
+      expect(stopped.stop).not.toBeNull();
+    });
+
+    it("should throw when no timer is running", () => {
+      const tracker = new TimeTracker(filePath);
+      expect(() => tracker.stop()).toThrow("No timer is currently running");
+    });
+
+    it("should throw when timer was already stopped", () => {
+      const tracker = new TimeTracker(filePath);
+      tracker.start("coding");
+      tracker.stop();
+      expect(() => tracker.stop()).toThrow("No timer is currently running");
+    });
+  });
+
+  describe("persistence", () => {
+    it("should persist entries to a JSON file", () => {
+      const tracker = new TimeTracker(filePath);
+      tracker.start("coding");
+      tracker.stop();
+
+      // Read raw file and verify
+      const raw = fs.readFileSync(filePath, "utf-8");
+      const data = JSON.parse(raw);
+      expect(data.entries).toHaveLength(1);
+      expect(data.entries[0].task).toBe("coding");
+    });
+
+    it("should load entries from an existing file", () => {
+      const tracker1 = new TimeTracker(filePath);
+      tracker1.start("coding");
+      tracker1.stop();
+
+      // Create a new tracker instance that reads from the same file
+      const tracker2 = new TimeTracker(filePath);
+      const entries = tracker2.getEntries();
+      expect(entries).toHaveLength(1);
+      expect(entries[0].task).toBe("coding");
+    });
