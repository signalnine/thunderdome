+/**
+ * A single time tracking entry.
+ */
+export interface TimeEntry {
+  /** The name of the task being tracked */
+  task: string;
+  /** ISO 8601 timestamp of when the timer started */
+  start: string;
+  /** ISO 8601 timestamp of when the timer stopped, or null if still running */
+  stop: string | null;
+}
+
+/**
+ * The data structure persisted to disk.
+ */
+export interface TrackerData {
+  entries: TimeEntry[];
+}
+
+/**
+ * Options for filtering time entries by date range.
+ */
+export interface DateRangeFilter {
+  /** Inclusive start of the range */
+  from?: Date;
+  /** Inclusive end of the range */
+  to?: Date;
+}
+
+/**
+ * Summary of total time (in milliseconds) per task name.
+ */
+export type TimeSummary = Record<string, number>;
