+import * as fs from "node:fs";
+import * as path from "node:path";
+import type { DateRangeFilter, TimeEntry, TimeSummary, TrackerData } from "./types.js";
+
+export class TimeTracker {
+  private filePath: string;
+  private data: TrackerData;
+
+  constructor(filePath: string) {
+    this.filePath = path.resolve(filePath);
+    this.data = this.load();
+  }
+
+  /**
+   * Load data from the JSON file. Returns empty data if the file doesn't exist.
+   */
+  private load(): TrackerData {
+    try {
+      const raw = fs.readFileSync(this.filePath, "utf-8");
+      const parsed: unknown = JSON.parse(raw);
+      if (
+        typeof parsed === "object" &&
+        parsed !== null &&
+        "entries" in parsed &&
+        Array.isArray((parsed as TrackerData).entries)
+      ) {
+        return parsed as TrackerData;
+      }
+      return { entries: [] };
+    } catch {
+      return { entries: [] };
+    }
+  }
+
+  /**
+   * Save the current data to the JSON file, creating directories as needed.
+   */
+  private save(): void {
+    const dir = path.dirname(this.filePath);
+    fs.mkdirSync(dir, { recursive: true });
+    fs.writeFileSync(this.filePath, JSON.stringify(this.data, null, 2), "utf-8");
+  }
+
+  /**
+   * Start a timer for the given task name.
+   * If another timer is currently running, it will be stopped first.
+   * Throws if the task name is empty.
+   */
+  start(task: string): TimeEntry {
+    if (!task || task.trim().length === 0) {
+      throw new Error("Task name must not be empty");
+    }
+
+    // Auto-stop any running timer
+    const running = this.getRunningEntry();
+    if (running) {
+      running.stop = new Date().toISOString();
+    }
+
+    const entry: TimeEntry = {
+      task,
+      start: new Date().toISOString(),
+      stop: null,
+    };
+
+    this.data.entries.push(entry);
+    this.save();
+    return entry;
+  }
+
+  /**
+   * Stop the currently running timer.
+   * Throws if no timer is running.
+   */
+  stop(): TimeEntry {
+    const running = this.getRunningEntry();
+    if (!running) {
+      throw new Error("No timer is currently running");
+    }
+
+    running.stop = new Date().toISOString();
+    this.save();
+    return running;
+  }
+
+  /**
+   * Get the currently running entry, or null if none.
+   */
+  private getRunningEntry(): TimeEntry | null {
+    for (let i = this.data.entries.length - 1; i >= 0; i--) {
+      if (this.data.entries[i].stop === null) {
+        return this.data.entries[i];
+      }
+    }
+    return null;
+  }
+
+  /**
+   * Get all entries, optionally filtered by date range.
+   * The filter applies to the entry's start time.
+   */
+  getEntries(filter?: DateRangeFilter): TimeEntry[] {
+    if (!filter) {
+      return [...this.data.entries];
+    }
+
+    return this.data.entries.filter((entry) => {
+      const entryStart = new Date(entry.start);
+      if (filter.from && entryStart < filter.from) {
+        return false;
+      }
+      if (filter.to && entryStart > filter.to) {
+        return false;
+      }
+      return true;
+    });
+  }
+
+  /**
+   * Get a summary of total time (in milliseconds) per task name.
+   * Running tasks use the current time for their duration calculation.
+   */
+  getSummary(filter?: DateRangeFilter): TimeSummary {
+    const entries = this.getEntries(filter);
+    const summary: TimeSummary = {};
+
+    for (const entry of entries) {
+      const start = new Date(entry.start).getTime();
+      const end = entry.stop ? new Date(entry.stop).getTime() : Date.now();
+      const duration = end - start;
+
+      if (summary[entry.task] === undefined) {
+        summary[entry.task] = 0;
+      }
+      summary[entry.task] += duration;
+    }
+
+    return summary;
+  }
+
+  /**
+   * Check if a timer is currently running.
+   */
+  isRunning(): boolean {
+    return this.getRunningEntry() !== null;
+  }
+
+  /**
+   * Get the currently running entry (public accessor).
+   */
+  current(): TimeEntry | null {
+    const running = this.getRunningEntry();
+    return running ? { ...running } : null;
+  }
+}
