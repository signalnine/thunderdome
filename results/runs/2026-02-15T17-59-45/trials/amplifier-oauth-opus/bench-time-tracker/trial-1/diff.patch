+/**
+ * A single time tracking entry.
+ */
+export interface TimeEntry {
+  /** The task name (supports unicode/emoji) */
+  task: string;
+  /** ISO 8601 timestamp when the timer started */
+  start: string;
+  /** ISO 8601 timestamp when the timer stopped, or null if still running */
+  stop: string | null;
+}
+
+/**
+ * Shape of the persisted JSON data file.
+ */
+export interface TrackerData {
+  entries: TimeEntry[];
+}
+
+/**
+ * A summary of total time per task name, in milliseconds.
+ */
+export type TimeSummary = Record<string, number>;
+
+/**
+ * Options for filtering entries by date range.
+ */
+export interface DateRangeFilter {
+  /** Inclusive start of the range */
+  from?: Date;
+  /** Inclusive end of the range */
+  to?: Date;
+}
