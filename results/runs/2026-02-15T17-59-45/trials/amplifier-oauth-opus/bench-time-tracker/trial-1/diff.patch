+import { readFileSync, writeFileSync, mkdirSync, existsSync } from "node:fs";
+import { dirname } from "node:path";
+import type { TimeEntry, TrackerData, TimeSummary, DateRangeFilter } from "./types.js";
+
+/**
+ * TimeTracker manages named timers with JSON file persistence.
+ *
+ * Only one timer can be running at a time. Starting a new timer
+ * automatically stops the previous one.
+ */
+export class TimeTracker {
+  private entries: TimeEntry[] = [];
+  private filePath: string;
+
+  constructor(filePath: string) {
+    this.filePath = filePath;
+    this.load();
+  }
+
+  /**
+   * Start a timer for the given task name.
+   * If another timer is already running, it is stopped first.
+   *
+   * @throws {Error} If the task name is empty or whitespace-only.
+   */
+  start(task: string): void {
+    if (!task || task.trim().length === 0) {
+      throw new Error("Task name must not be empty");
+    }
+
+    // Auto-stop any running timer
+    const running = this.getRunningEntry();
+    if (running) {
+      running.stop = new Date().toISOString();
+    }
+
+    this.entries.push({
+      task,
+      start: new Date().toISOString(),
+      stop: null,
+    });
+
+    this.save();
+  }
+
+  /**
+   * Stop the currently running timer.
+   *
+   * @throws {Error} If no timer is currently running.
+   */
+  stop(): void {
+    const running = this.getRunningEntry();
+    if (!running) {
+      throw new Error("No timer is currently running");
+    }
+
+    running.stop = new Date().toISOString();
+    this.save();
+  }
+
+  /**
+   * Get all recorded time entries, optionally filtered by date range.
+   *
+   * Filtering is based on the entry's start time. Both `from` and `to`
+   * bounds are inclusive.
+   */
+  getEntries(filter?: DateRangeFilter): TimeEntry[] {
+    if (!filter) {
+      return [...this.entries];
+    }
+
+    return this.entries.filter((entry) => {
+      const entryStart = new Date(entry.start).getTime();
+
+      if (filter.from && entryStart < filter.from.getTime()) {
+        return false;
+      }
+      if (filter.to && entryStart > filter.to.getTime()) {
+        return false;
+      }
+      return true;
+    });
+  }
+
+  /**
+   * Get a summary of total time (in milliseconds) spent per task name.
+   *
+   * Entries with the same task name are summed together.
+   * Running timers use the current time for their duration.
+   */
+  getSummary(): TimeSummary {
+    const summary: TimeSummary = {};
+    const now = Date.now();
+
+    for (const entry of this.entries) {
+      const start = new Date(entry.start).getTime();
+      const end = entry.stop ? new Date(entry.stop).getTime() : now;
+      const duration = end - start;
+
+      summary[entry.task] = (summary[entry.task] ?? 0) + duration;
+    }
+
+    return summary;
+  }
+
+  /**
+   * Returns the currently running entry, or undefined if none.
+   */
+  private getRunningEntry(): TimeEntry | undefined {
+    return this.entries.find((e) => e.stop === null);
+  }
+
+  /**
+   * Load entries from the JSON file on disk.
+   * If the file doesn't exist, starts with an empty list.
+   */
+  private load(): void {
+    if (!existsSync(this.filePath)) {
+      this.entries = [];
+      return;
+    }
+
+    try {
+      const raw = readFileSync(this.filePath, "utf-8");
+      const data = JSON.parse(raw) as TrackerData;
+      this.entries = data.entries;
+    } catch {
+      // Corrupt or unreadable file â€” start fresh
+      this.entries = [];
+    }
+  }
+
+  /**
+   * Persist the current entries to the JSON file.
+   * Creates parent directories if they don't exist.
+   */
+  private save(): void {
+    const dir = dirname(this.filePath);
+    if (!existsSync(dir)) {
+      mkdirSync(dir, { recursive: true });
+    }
+
+    const data: TrackerData = { entries: this.entries };
+    writeFileSync(this.filePath, JSON.stringify(data, null, 2), "utf-8");
+  }
+}
